{
   "name": "ChatGPT RTL Switcher",
   "version": "1.0",
   "manifest_version": 3,
   "description": "Toggle text direction on ChatGPT-related websites between LTR and RTL.",
   "icons": {
     "16": "icon16.png",
     "48": "icon48.png",
     "128": "icon128.png"
   },
   "action": {
     "default_icon": {
       "16": "icon16.png",
       "48": "icon48.png",
       "128": "icon128.png"
     }
   },
   "background": {
     "service_worker": "background.js"
   },
   "permissions": [
     "activeTab",
     "scripting"
   ],
   "content_scripts": [
     {
       "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
       "js": ["content.js"]
     }
   ],
   "key": ""

 }
 